{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "types": [
      "node"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "bin/*"
      ]
    }
  },
  "include": [
    "bin/**/*"
  ]
}
